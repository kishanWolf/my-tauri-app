{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ScreenshareHost",
  "version": "0.1.0",
  "identifier": "com.example.screensharehost",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5174",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Screenshare Host",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "backgroundColor": "#000000"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../src/privacy-overlay.html",
      "../src/privacy-overlay.css"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    }
  },
  "plugins": {
    "windows": {
      "webviewTransparentBackground": true
    }
  }
}